---
interface NavItem {
  name: string;
  href: string;
}

const navItems: NavItem[] = [
  {
    name: 'Experiencia',
    href: '#experiencia',
  },
  {
    name: 'Proyectos',
    href: '#proyectos',
  },
  {
    name: 'Educación',
    href: '#educacion',
  },
  {
    name: 'Sobre mí',
    href: '#sobre-mi',
  },
];

interface Props {
  isHorizontal?: boolean;
}

const { isHorizontal = false } = Astro.props as Props;
---

<ul
  class={`gap-4 ${isHorizontal ? 'text-base hidden md:flex' : 'flex flex-col w-64 text-lg mt-6 md:hidden'}`}
>
  {
    navItems.map((item: NavItem) => (
      <li>
        <a
          class="py-2 px-3 relative inline-block no-underline text-dark dark:text-light after:block after:h-0.5 after:bg-green-dark-200 dark:after:bg-green-light-100 after:scale-x-0 after:transition-transform after:duration-300 hover:after:scale-x-100 after:origin-left"
          href={item.href}
        >
          {item.name}
        </a>
      </li>
    ))
  }
</ul>
